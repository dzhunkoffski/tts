{
    "name": "fast_speech_v1",
    "n_gpu": 1,
    "preprocessing": {
        "sr": 16000
    },
    "augmentations": {
        "wave": [],
        "spectorgram": []
    },
    "arch": {
        "type": "FastSpeechV1",
        "args": {
            "max_len": 5000,
            "pad_idx": 0,
            "n_blocks": 4,
            "n_heads": 2,
            "fft_kernel": 3,
            "lr_kernel": 3,
            "embed_dim": 384,
            "n_mels": 80,
            "conv_channels": 1024
        }
    },
    "data": {
        "train": {
            "batch_size": 10,
            "num_workers": 4,
            "datasets": [
                {
                    "type": "LJSpeechDataset",
                    "args": {
                        "dataset_path": "/kaggle/input/tts-ljspeech-audio/LJSpeech-1.1",
                        "is_train": true,
                        "train_size": 1.0,
                        "text_cleaners": ["english_cleaners"],
                        "mel_spec_path": "/kaggle/input/tts-ljspeech-mels/mels",
                        "alignment_path": "/kaggle/input/tts-ljspeech-alignments/alignments",
                        "dataset_size": 20,
                        "sr": 16000
                    }
                }
            ]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 3e-4
        }
    },
    "loss": {
        "type": "FastSpeechLoss",
        "args": {}
    },
    "metrics": [],
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "steps_per_epoch": 20,
            "epochs": 100,
            "anneal_strategy": "cos",
            "max_lr": 3e-4,
            "pct_start": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 1,
        "monitor": "min val_loss",
        "early_stop": 100,
        "visualize": "wandb",
        "wandb_project": "tts",
        "len_epoch": 20,
        "grad_norm_clip": 1
    }
}